@page "{id:int}"
@model AgenciaTurismo.Pages.Reservas.DeleteModel

@{
    ViewData["Title"] = "Excluir Reserva";
}

<h1>Excluir Reserva</h1>
<h3 class="text-danger">Você tem certeza que deseja excluir esta reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reserva.Cliente)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reserva.Cliente.Nome)
        </dd>
        <dt class="col-sm-3">
            Pacote Turístico
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reserva.PacoteTuristico.Titulo)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reserva.QuantidadeViajantes)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reserva.QuantidadeViajantes)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reserva.ValorTotal)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reserva.ValorTotal)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Reserva.DataReserva)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Reserva.DataReserva)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Reserva.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>