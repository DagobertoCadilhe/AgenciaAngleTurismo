@page
@model AgenciaTurismo.Pages.Reservas.CreateModel

@{
    ViewData["Title"] = "Nova Reserva";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.ClienteId" class="control-label">Cliente</label>
                <select asp-for="Reserva.ClienteId" class="form-control"
                        asp-items="Model.Clientes">
                    <option value="">Selecione um cliente</option>
                </select>
                <span asp-validation-for="Reserva.ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.PacoteTuristicoId" class="control-label">Pacote Turístico</label>
                <select asp-for="Reserva.PacoteTuristicoId" class="form-control"
                        asp-items="Model.Pacotes">
                    <option value="">Selecione um pacote</option>
                </select>
                <span asp-validation-for="Reserva.PacoteTuristicoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.QuantidadeViajantes" class="control-label">Quantidade de Viajantes</label>
                <input asp-for="Reserva.QuantidadeViajantes" class="form-control" min="1" />
                <span asp-validation-for="Reserva.QuantidadeViajantes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Criar Reserva</button>
                <a asp-page="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}