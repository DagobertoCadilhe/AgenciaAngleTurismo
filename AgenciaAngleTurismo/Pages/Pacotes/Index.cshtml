@page
@model AgenciaTurismo.Pages_Pacotes.IndexModel

@{
    ViewData["Title"] = "Pacotes Turísticos";
}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Novo Pacote
        </a>
    </div>

    <div class="row">
        @foreach (var pacote in Model.PacoteTuristico)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm package-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => pacote.Titulo)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <i class="fas fa-map-marker-alt"></i> @Html.DisplayFor(modelItem => pacote.Destino.Nome)
                        </h6>
                        
                        <div class="my-3">
                           <p class="mb-1"><i class="fas fa-calendar-start"></i> <strong>Partida:</strong> @pacote.DataInicio.ToString("dd/MM/yyyy")</p>
                        </div>

                        <div class="text-end mt-auto">
                            <h4 class="card-price">@pacote.Preco.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</h4>
                             <div class="btn-group" role="group">
                                <a asp-page="./Edit" asp-route-id="@pacote.Id" class="btn btn-sm btn-outline-primary" title="Editar"><i class="fas fa-edit"></i>Edit</a>
                                <a asp-page="./Details" asp-route-id="@pacote.Id" class="btn btn-sm btn-outline-info" title="Detalhes"><i class="fas fa-info-circle"></i>Details</a>
                                <a asp-page="./Delete" asp-route-id="@pacote.Id" class="btn btn-sm btn-outline-danger" title="Excluir"><i class="fas fa-trash-alt"></i>Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>