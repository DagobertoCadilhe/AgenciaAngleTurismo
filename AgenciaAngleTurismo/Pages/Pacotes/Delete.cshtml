@page
@model AgenciaTurismo.Pages_Pacotes.DeleteModel

@{
    ViewData["Title"] = "Excluir Pacote Turístico";
}

<h1 class="page-header">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Atenção!</h4>
            </div>
            <div class="card-body p-4">
                <p class="fs-5">Você tem certeza que deseja excluir permanentemente este pacote?</p>
                <hr />

                <dl class="row">
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.Titulo)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PacoteTuristico.Titulo)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.DataInicio)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PacoteTuristico.DataInicio)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.Preco)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PacoteTuristico.Preco)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.Destino)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PacoteTuristico.Destino.Nome)
                    </dd>
                </dl>

                <form method="post" class="mt-4">
                    <input type="hidden" asp-for="PacoteTuristico.Id" />
                    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
                    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>