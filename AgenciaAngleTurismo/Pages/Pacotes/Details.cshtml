@page
@model AgenciaTurismo.Pages_Pacotes.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Pacote Turístico";
}

<h1 class="page-header">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <dl class="row">
                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.Titulo)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PacoteTuristico.Titulo)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.DataInicio)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PacoteTuristico.DataInicio)
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.Preco)
                    </dt>
                    <dd class="col-sm-9">
                        @Model.PacoteTuristico.Preco.ToString("C")
                    </dd>

                    <dt class="col-sm-3 fw-bold">
                        @Html.DisplayNameFor(model => model.PacoteTuristico.Destino)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PacoteTuristico.Destino.Nome)
                    </dd>
                </dl>

                <div class="mt-4">
                    <a asp-page="./Edit" asp-route-id="@Model.PacoteTuristico.Id" class="btn btn-primary">Editar</a>
                    <a asp-page="./Index" class="btn btn-secondary">Voltar para a Lista</a>
                </div>
            </div>
        </div>
    </div>
</div>
