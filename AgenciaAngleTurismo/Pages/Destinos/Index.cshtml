@page  
@model AgenciaTurismo.Pages_Destinos.IndexModel  

@{  
    ViewData["Title"] = "Nossos Destinos";  
}  

<div class="container">  
    <div class="d-flex justify-content-between align-items-center mb-4">  
        <h1 class="display-4">@ViewData["Title"]</h1>  
        <a asp-page="Create" class="btn btn-primary">  
            <i class="fas fa-plus"></i> Novo Destino  
        </a>  
    </div>  

    <div class="row">  
        @foreach (var destino in Model.Destino)  
        {  
            <div class="col-md-4 col-lg-3 mb-4">  
                <div class="card h-100 shadow-sm destination-card">  
                    <h5 class="card-title">@Html.DisplayFor(modelItem => destino.Nome)</h5>  
                    <div class="mt-auto">  
                        <a asp-page="./Edit" asp-route-id="@destino.Id" class="btn btn-sm btn-outline-primary">Editar</a>  
                        <a asp-page="./Details" asp-route-id="@destino.Id" class="btn btn-sm btn-outline-info">Detalhes</a>  
                        <a asp-page="./Delete" asp-route-id="@destino.Id" class="btn btn-sm btn-outline-danger">Excluir</a>  
                    </div>  
                </div>  
            </div>  
        }  
    </div>  
</div>